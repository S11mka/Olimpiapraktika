<Page x:Class="WpfApp2.MainWindow1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow1">

    <Grid Background="#FF0010FF">
        
            <StackPanel Margin="20">
                <TextBlock Text="Логин" FontSize="16" />
                <TextBox x:Name="txtLogin" Margin="0 5 0 10" />

                <TextBlock Text="Пароль" FontSize="16" />
                <PasswordBox x:Name="txtPassword" Margin="0 5 0 10" />

                <Button Content="Войти" Width="100" Height="30" Click="Login_Click" />
            </StackPanel>
        </Grid>
    
</Page>
